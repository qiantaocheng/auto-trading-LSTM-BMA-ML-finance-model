{
  "database_file": "data/stock_universe.db",
  "crawler": {
    "max_workers": 8,
    "request_delay_seconds": 0.2,
    "timeout_seconds": 30,
    "retry_attempts": 2
  },
  "quality_filter": {
    "min_price": 2.0,
    "max_price": 1000.0,
    "min_market_cap": 300000000,
    "min_avg_volume": 150000,
    "max_bid_ask_spread_pct": 0.8,
    "max_volatility": 80.0,
    "max_beta": 2.5,
    "min_days_since_ipo": 365,
    "excluded_suffixes": [
      ".WS", ".WT", ".U", ".UN", "-U", "-WT", "-WS",
      ".PR", "-PR", ".RT", "-RT"
    ],
    "excluded_sectors": [],
    "scoring_weights": {
      "market_cap": 0.25,
      "volume": 0.25,
      "price_stability": 0.20,
      "spread": 0.15,
      "beta": 0.10,
      "age": 0.05
    }
  },
  "auto_update_days": 7,
  "force_update": false
}