<Window x:Class="Trader.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Trader.App.Views"
        mc:Ignorable="d"
        Title="Trader AutoPilot" Height="720" Width="1200" Background="{StaticResource CardBackgroundBrush}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top toolbar: Exit button docked to the right -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,6">
            <Button DockPanel.Dock="Right"
                    Content="Exit App"
                    Click="ExitButton_Click"
                    Background="#C0392B"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Padding="14,4"
                    BorderThickness="0"
                    ToolTip="Terminate all background services and exit the application" />
        </DockPanel>

        <TabControl Grid.Row="1">
            <TabItem Header="Direct Prediction">
                <views:DirectPredictionView DataContext="{Binding DirectPrediction}" />
            </TabItem>
            <TabItem Header="Monitor">
                <views:MonitorView DataContext="{Binding Monitor}" />
            </TabItem>
            <TabItem Header="Database">
                <views:DatabaseView DataContext="{Binding Database}" />
            </TabItem>
            <TabItem Header="Connection">
                <views:ConnectionView DataContext="{Binding Connection}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
